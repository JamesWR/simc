#!./simc 

monk="Monk_Brewmaster_1h_T17M"
level=100
race=blood_elf
role=tank
position=front
talents=http://us.battle.net/wow/en/tool/talent-calculator#fb!0011111
spec=brewmaster

# This default action priority list is automatically created based on your character.
# It is a attempt to provide you with a action list that is both simple and practicable,
# while resulting in a meaningful and good simulation. It may not result in the absolutely highest possible dps.
# Feel free to edit, adapt and improve it to your own needs.
# SimulationCraft is always looking for updates and improvements to the default action lists.

# Executed before combat begins. Accepts non-harmful actions only.

actions.precombat=flask,type=greater_draenic_stamina_flask
actions.precombat+=/food,type=sleeper_surprise
actions.precombat+=/stance,choose=sturdy_ox
actions.precombat+=/snapshot_stats
actions.precombat+=/dampen_harm


# Executed every time the actor is available.

actions=auto_attack
actions+=/arcane_torrent,if=energy<=40
actions+=/chi_brew,if=talent.chi_brew.enabled&chi=0
actions+=/dampen_harm,if=incoming_damage_1500ms&buff.fortifying_brew.down&buff.elusive_brew_activated.down
actions+=/fortifying_brew,if=incoming_damage_1500ms&buff.dampen_harm.down&buff.elusive_brew_activated.down
actions+=/elusive_brew,if=buff.elusive_brew_stacks.react>=9&buff.dampen_harm.down&buff.elusive_brew_activated.down
actions+=/invoke_xuen,if=talent.invoke_xuen.enabled
actions+=/run_action_list,name=single_target,if=active_enemies<5
actions+=/run_action_list,name=aoe,if=active_enemies>5

actions.single_target=/guard,if=chi>=4
actions.single_target+=/keg_smash,if=chi<=4
actions.single_target+=/chi_wave,if=talent.chi_wave.enabled&energy.time_to_max>3
actions.single_target+=/chi_explosion,if=chi>=3
actions.single_target+=/expel_harm,if=chi<=4&cooldown.expel_harm.remains=0&cooldown.keg_smash.remains>=1.5
actions.single_target+=/jab,if=chi<=3&cooldown.keg_smash.remains>=1.5&cooldown.expel_harm.remains>=1.5
actions.single_target+=/tiger_palm,if=(energy+(energy.regen*(cooldown.keg_smash.remains)))>=40
actions.single_target+=/tiger_palm,if=cooldown.keg_smash.remains>=1.5

actions.aoe=breath_of_fire,if=chi>=3&buff.shuffle.remains>=6&target.debuff.dizzying_haze.up
actions.aoe+=/rushing_jade_wind,if=talent.rushing_jade_wind.enabled
actions.aoe+=/spinning_crane_kick


